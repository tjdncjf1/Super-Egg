<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="must.dao.ChartDao">
  <resultMap type="chart" id="chartResultMap">
    <id property="pId"              column="PROD_ID"/>
    <result property="hPrice"      column="HPRICE"/>
    <result property="hTime"       column="HTIME"/>
  </resultMap>

	<insert id="insert" parameterType="chart">
		insert into HOUR_CHANGES (PROD_ID, HPRICE, HTIME)
		values (#{pId}, #{hPrice}, #{hTime})
	</insert>

  <select id="cItem" parameterType="string" resultMap="chartResultMap">
	   select * from HOUR_CHANGES
     where PROD_ID = #{pId};
	</select>
	
<!-- 	<delete id="delete" parameterType="string">
		delete from ITEM
		where PROD_ID=#{pId}
	</delete> -->
	
</mapper>