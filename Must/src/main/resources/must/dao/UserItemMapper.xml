<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="must.dao.UserItemDao">
  <resultMap type="userItem" id="userItemResultMap">
    <id property="no"             column="UNO"/>
    <result property="pId"       column="PROD_ID"/>
    <result property="wish_price"       column="WISH_PRICE"/>
    <result property="reg_date"       column="REG_DATE"/>
  </resultMap>

	<insert id="insertUser" parameterType="user">
		insert into USERS (UEMAIL, UPW)
		values (#{email}, #{password})
	</insert>
	
	<insert id="insertItem" parameterType="user">
		insert into USERS (UEMAIL, UPW)
		values (#{email}, #{password})
	</insert>

		<select id="selectList" resultMap="userResultMap">
    select * from USERS	    
	</select>
	
	<select id="selectNo" parameterType="string" resultType="int">
    select UNO from USERS
    where UEMAIL=#{email}	    
	</select>
	
	
</mapper>